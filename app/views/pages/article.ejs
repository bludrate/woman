<% layout('../layout') -%>

<main class="article">
    <%if(mainImage) {%>
    <img src="<%=mainImage.src%>" class="main-image" alt="<%=mainImage.alt%>"/>
    <%}%>
    <header class="article__header">
        <time class="article__date"><%=postDate%></time>
        <h1 class="article__title"><%=title%></h1>
    </header>
    <div class="article__content"><%=content%></div>
</main>