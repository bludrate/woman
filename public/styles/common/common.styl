body, html {
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.content {
	overflow: auto;
	height: 100%;
	padding: 10px;
	box-sizing: border-box;
	-webkit-overflow-scrolling touch;

	img {
		max-width: 100%;
	}
}

.wrapper {
	z-index: 1;
	position: relative;
	height: 100%;
	background: white;
	box-sizing: border-box;
	padding-top: 40px;
}